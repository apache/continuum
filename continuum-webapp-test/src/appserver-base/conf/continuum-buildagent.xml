<continuum-buildagent-configuration>
  <continuumServerUrl>${baseUrl}/master-xmlrpc</continuumServerUrl>
  <buildOutputDirectory>${project.build.directory}/data/build-agent/build-output-directory</buildOutputDirectory>
  <workingDirectory>${project.build.directory}/data/build-agent/working-directory</workingDirectory>
  <sharedSecretPassword>continuum1234</sharedSecretPassword>
  <localRepositories>
    <localRepository>
      <name>DEFAULT</name>
      <location>${settings.localRepository}</location>
      <layout>default</layout>
    </localRepository>
    <localRepository>
      <name>purgeable</name>
      <location>${agentRepo}</location>
      <layout>default</layout>
    </localRepository>
  </localRepositories>
</continuum-buildagent-configuration>
