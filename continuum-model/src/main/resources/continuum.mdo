    <!--
     |
     | Scm Result
     |
     |-->
    <class java.abstract="true">
      <name>ScmResult</name>
      <packageName>org.apache.maven.continuum.scm</packageName>
      <version>1.0.0</version>
      <fields>
        <field>
          <name>success</name>
          <version>1.0.0</version>
