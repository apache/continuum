    <class>
      <name>ScmFile</name>
      <packageName>org.apache.maven.continuum.scm</packageName>
      <version>1.0.0</version>
      <fields>
        <field>
          <name>path</name>
          <version>1.0.0</version>
          <type>String</type>
        </field>
<!-- TODO: Use some form of enumeration
        <field>
          <name>status</name>
          <version>1.0.0</version>
          <type>ScmFileStatus</type>
        </field>
-->
