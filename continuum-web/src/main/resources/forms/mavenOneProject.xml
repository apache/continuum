<form>
  <extend>continuumProject</extend>
  <id>maven-1Project</id>
  <target-class>org.apache.maven.continuum.project.MavenOneProject</target-class>
  <lookup-expression>getMavenOneProject(#id)</lookup-expression>
  <elements>
    <element>
      <id>project.goals</id>
      <validator>default</validator>
      <expression>goals</expression>
      <type>text</type>
    </element>
  </elements>

  <!-- Add -->
  <add>
    <title-key>project.title.add</title-key>
    <action>addEntity</action>
    <view>continuumProject.form?mode=summary</view>
    <expression>addMavenOneProject(#entity)</expression>
  </add>

  <!-- Update -->
  <update>
    <title-key>project.title.update</title-key>
    <action>updateEntity</action>
    <view>continuumProject.form?mode=summary</view>
    <expression>updateMavenOneProject(#entity)</expression>
  </update>

</form>
