<form>
  <id>continuumProject</id>
  <key-expression>id</key-expression>
  <summary-collection-expression>getProjects()</summary-collection-expression>
  <source-role>org.apache.maven.continuum.Continuum</source-role>
  <type-expression>builderId</type-expression>
  <elements>
    <element>
      <id>project.name</id>
      <validator>required</validator>
      <type>text</type>
      <expression>name</expression>
    </element>
    <element>
      <id>project.scmUrl</id>
      <validator>required</validator>
      <type>text</type>
      <expression>scmUrl</expression>
    </element>
    <element>
      <id>project.nagEmailAddress</id>
      <validator>required</validator>
      <type>text</type>
      <expression>nagEmailAddress</expression>
    </element>
    <element>
      <id>project.version</id>
      <validator>required</validator>
      <type>text</type>
      <expression>version</expression>
    </element>
    <element>
      <id>project.type</id>
      <validator>default</validator>
      <type>text</type>
      <expression>builderId</expression>
      <immutable>true</immutable>
    </element>
    <element>
      <id>project.state</id>
      <validator>default</validator>
      <type>text</type>
      <expression>state</expression>
      <immutable>true</immutable>
      <content-generator>continuum-state</content-generator>
    </element>
  </elements>

  <!-- View -->
  <view>
    <title-key>project.title</title-key>
  </view>

  <!-- Delete -->
  <delete>
    <title-key>project.title.delete</title-key>
    <view>continuumProject.form?mode=summary</view>
    <action>deleteEntity</action>
    <expression>removeProject(#id)</expression>
  </delete>

  <!-- Summary -->

  <!-- TODO: the headings here need to be i18n -->

  <summary>
    <title-key>title.key</title-key>
    <summary-elements>
      <summary-element>
        <id>project.state</id>
      </summary-element>
      <summary-element>
        <id>project.name</id>
      </summary-element>
    </summary-elements>
    <operations>
      <operation>
        <name>Build</name>
        <action>target/continuumProject.form?mode=summary&amp;action=cam&amp;cid=buildProject&amp;id=$id$</action>
      </operation>
      <operation>
        <name>Builds</name>
        <action>target/ProjectBuilds.vm?view=ProjectBuilds&amp;id=$id$</action>
      </operation>
      <operation>
        <name>View</name>
        <action>target/$type$Project.form?mode=view&amp;id=$id$</action>
      </operation>
      <operation>
        <name>Edit</name>
        <action>target/$type$Project.form?mode=update&amp;id=$id$</action>
      </operation>
      <operation>
        <name>Delete</name>
        <action>target/$type$Project.form?mode=delete&amp;id=$id$</action>
      </operation>
    </operations>
  </summary>
</form>
