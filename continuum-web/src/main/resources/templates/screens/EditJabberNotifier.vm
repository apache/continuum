$page.setTitle( "Continuum - Jabber Notifier" )

#set ( $executorId = $data.getParameters().getString("executorId") )

<div class="app">
  <div id="axial" class="h3">
    <h3>Edit Jabber Notifier</h3>
    <form method="post" action="$link">
      #hidden ( "action" "cam" )
      #hidden ( "cid" "updateNotifier" )
      #hidden ( "view" "View.vm" )
      #hidden ( "id" $project.id )
      #hidden ( "fid" "${executorId}Project" )
      #hidden ( "notifierId" $notifier.id )
      <div class="axial">
        <table border="1" cellpadding="3" cellspacing="2" width="100%">
          <tbody>
          <tr>
            <th>Jabber Host</th>
            <td>
              <input type="text" name="host" value="#if($notifier.configuration.host)$notifier.configuration.host#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Jabber Port</th>
            <td>
              <input type="text" name="port" value="#if($notifier.configuration.port)$notifier.configuration.port#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Jabber Login</th>
            <td>
              <input type="text" name="login" value="#if($notifier.configuration.login)$notifier.configuration.login#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Jabber Password</th>
            <td>
              <input type="password" name="password" value="#if($notifier.configuration.password)$notifier.configuration.password#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Jabber Domain Name</th>
            <td>
              <input type="text" name="domainName" value="#if($notifier.configuration.domainName)$notifier.configuration.domainName#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Jabber Recipient</th>
            <td>
              <input type="text" name="address" value="#if($notifier.configuration.address)$notifier.configuration.address#end" size="100"/>
            </td>
          </tr>
          <tr>
            <th>Is it a SSL Connection?</th>
            <td>
              <input type="checkbox" name="sslConnection" #if( $notifier.configuration.sslConnection == "on" ) checked="checked" #end/>
            </td>
          </tr>
          <tr>
            <th>Is it a Jabber Group?</th>
            <td>
              <input type="checkbox" name="isGroup" #if( $notifier.configuration.isGroup == "on" ) checked="checked" #end/>
            </td>
          </tr>
          <tr>
            <th>Send on success</th>
            <td>
              <input type="checkbox" name="sendOnSuccess" #if( $notifier.sendOnSuccess ) checked="checked" #end/>
            </td>
          </tr>
          <tr>
            <th>Send on failure</th>
            <td>
              <input type="checkbox" name="sendOnFailure" #if( $notifier.sendOnFailure ) checked="checked" #end/>
            </td>
          </tr>
          <tr>
            <th>Send on error</th>
            <td>
              <input type="checkbox" name="sendOnError" #if( $notifier.sendOnError ) checked="checked" #end/>
            </td>
          </tr>
          <tr>
            <th>Send on warning</th>
            <td>
              <input type="checkbox" name="sendOnWarning" #if( $notifier.sendOnWarning ) checked="checked" #end/>
            </td>
          </tr>
          </tbody>
        </table>
        #submitBar( "Submit" )
      </div>
    </form>
  </div>
</div>
