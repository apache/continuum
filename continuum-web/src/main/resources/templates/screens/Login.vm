$page.setTitle( "Login" )

<div class="app">
  <div id="axial" class="h3">
    <form method="post" action="$link">
      #hidden ( "action" "login" )

      <h3>Authentication</h3>
      <div class="axial">
        <table border="1" cellpadding="3" cellspacing="2" width="100%">
          <tbody>
#if ( $loginMessage )
          <tr>
            <td colspan="2"><font color="red">$loginMessage</font></td>
          </tr>
#end
          <tr>
            <th>Username</th>
            <td><input type="text" name="login.username" size="100"></td>
          </tr>
          <tr>
            <th>Password</th>
            <td><input type="password" name="login.password" size="100"></td>
          </tr>
          </tbody>
        </table>

        #submitBar( "Submit" )
      </div>
    </form>
  </div>
</div>
